<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#F8F8F8"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/cyrcle_style"
        android:backgroundTint="#1FCB9B"
        android:text="ELECTRON"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="@font/lato_regular"
        android:textColor="#F8F8F8"
        android:layout_gravity="center"
        android:paddingTop="23dp"
        android:textAlignment="center">
    </TextView>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authorization"
        android:fontFamily="@font/lato_regular"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:textColor="#1B374D">
    </TextView>
    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="Login"
        android:drawableStart="@drawable/user_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/lato_regular"
        android:textSize="25dp"
        android:textColor="#1B374D"
        android:inputType="textEmailAddress"
        android:paddingStart="15dp"
        android:layout_marginTop="40dp"></EditText>
    <EditText
        android:id="@+id/password"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:hint="Password"
        android:drawableStart="@drawable/lock_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/lato_regular"
        android:textSize="25dp"
        android:textColor="#1B374D"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:layout_marginTop="30dp"></EditText>
    <TextView
        android:id="@+id/login_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style"
        android:text="Login"
        android:textSize="30dp"
        android:backgroundTint="#1FCB9B"
        android:paddingHorizontal="60dp"
        android:paddingVertical="23dp"
        android:layout_gravity="center"
        android:textColor="#F8F8F8"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="30dp">

    </TextView>



</LinearLayout>